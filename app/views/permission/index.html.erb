<h1>Permission#index</h1>
<p>Find me in app/views/permission/index.html.erb</p>
<%if @permissions.empty? %>
	No permissions to display
<% else %>	
	<table>
		<tr>
			<th>User</th>
			<th>Provider</th>
			<th>Uid</th>
			<th>Name</th>
			<th>Image</th>
			<th>URL</th>
		</tr>
		<% for p in @permissions %>
			<tr>
				<td><%= p.user_id %></td>
				<td><%= p.provider %></td>
				<td><%= p.uid %></td>
				<td><%= p.name %></td>
				<td><%= image_tag "#{p.profile_image_url}", :size => "32x32" %></td>
				<td><%= p.url %></td>
				<td><%= link_to "Show", permission_show_path(:id => p.id) %></td>
				<td><%= link_to "Remove", permission_destroy_path(:id => p.id), :confirm => 'Are you sure?', :method => :delete %></td>
			</tr>
		<% end %>
	</table>
<% end %>	
<p><strong>Grant access:</strong></p>
<p>
	<a href="/auth/twitter" class="auth_provider">
		<%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" %>Twitter
	</a>
</p>