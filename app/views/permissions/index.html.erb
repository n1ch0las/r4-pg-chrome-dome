<h1>Listing permissions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile image url</th>
      <th>Provider</th>
      <th>Token</th>
      <th>Token secret</th>
      <th>Uid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.name %></td>
        <td><%= permission.profile_image_url %></td>
        <td><%= permission.provider %></td>
        <td><%= permission.token %></td>
        <td><%= permission.token_secret %></td>
        <td><%= permission.uid %></td>
        <td><%= permission.user_id %></td>
        <td><%= link_to 'Show', permission %></td>
        <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission', new_permission_path %>
